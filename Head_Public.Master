    <%
        string path = Server.MapPath("/assets/b_smart_v1/");
        string[] jsFiles = Directory.GetFiles(path, "polyfills.*.js").Concat(Directory.GetFiles(path, "runtime.*.js")).Concat(Directory.GetFiles(path, "main.*.js")).Concat(Directory.GetFiles(path, "*.*.js")).ToArray();
        List<string> relativeJsSources = new List<string>();
        foreach (string jsFile in jsFiles) {
            string jsFileName = Path.GetFileName(jsFile);
            string relativeJsSrc = "/assets/b_smart_v1/" + jsFileName;
            relativeJsSources.Add(relativeJsSrc);
        }  
    %>
    <% foreach (string relativeJsSrc in relativeJsSources) { %>
                <script  defer src="<%= relativeJsSrc %>"></script>
    <% } %>

