<%@ Import Namespace="System.IO" %>


<!DOCTYPE html
    PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head runat="server">
    <title>B-Smart Academia</title>
    <asp:ContentPlaceHolder ID="HeadContent" runat="server">
    </asp:ContentPlaceHolder>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Styles/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/fontawesome-free-5.13.0-web/css/all.css">
    <link rel="stylesheet" href="~/Styles/hamburgers.min.css">
    <!-- DataTable -->
    <link rel="stylesheet" href="./assets/dataTable/css/dataTables.bootstrap4.min.css">
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="assets/semantic.ui/semantic-ui-dropdown.min.css">
    <link rel="stylesheet" href="assets/semantic.ui/semantic-ui-transition.min.css">
    <link rel="stylesheet" href="./assets/datepicker/gijgo.min.css">
    <link rel="stylesheet" href="~/Styles/style.css">

    <style>
        

        .main-area>div{
            display: flex;
            height: 100%;
            align-items: center;
            justify-content: center;
        }
        .main-area>div>div{
            height: auto;
            width: 100%;
            max-width: 100%;
        }
    </style>

    <%
        string path = Server.MapPath("/assets/b_smart_v1/");
        string[] cssFiles = Directory.GetFiles(path, "styles.*.css").ToArray();
        List<string> relativeCssSources = new List<string>();
        foreach (string cssFile in cssFiles) {
            string cssFileName = Path.GetFileName(cssFile);
            string relativeCssSrc = "/assets/b_smart_v1/" + cssFileName;
            relativeCssSources.Add(relativeCssSrc);
        }  
    %>
    <% foreach (string relativeCssSrc in relativeCssSources) { %>
            <script>
                var dynamicSrc = '<%= ResolveUrl(relativeCssSrc) %>';
                function addStylesheet() {
                    var link = document.createElement('link');
                    link.rel = 'stylesheet';
                    link.type = 'text/css';
                    link.href = dynamicSrc; 
                    document.head.appendChild(link); 
                }
                addStylesheet();
            </script>
    <% } %>


    <!-- <link href="/Styles/Site_New.css" rel="stylesheet" type="text/css" /> -->
    <!-- <link href="/Styles/menu_new.css" rel="stylesheet" type="text/css" /> -->
